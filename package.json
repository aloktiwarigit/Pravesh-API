{
  "name": "property-legal-agent-api",
  "version": "1.0.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "description": "Property Legal Agent - REST API Server",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "test -d dist && echo 'dist exists, skipping build' || tsc",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:unit": "vitest run --exclude src/__tests__/integration/",
    "test:integration": "vitest run src/__tests__/integration/",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "seed": "ts-node prisma/seed.ts",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.0",
    "@google-cloud/bigquery": "^7.3.0",
    "@prisma/client": "^5.10.0",
    "applicationinsights": "^3.13.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "firebase-admin": "^12.0.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.9.3",
    "json2csv": "^6.0.0-alpha.2",
    "pdfkit": "^0.14.0",
    "pg-boss": "^12.0.0",
    "pino": "^10.3.1",
    "pino-http": "^11.0.0",
    "rate-limit-redis": "^4.3.1",
    "razorpay": "^2.9.2",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^4.28.10",
    "@types/node": "^20.10.0",
    "@types/pino-http": "^5.8.4",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "nodemon": "^3.0.2",
    "prisma": "^5.10.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
}
