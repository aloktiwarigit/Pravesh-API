# ============================================================
# Property Legal Agent API — Environment Variables
# Copy to .env and fill in values
# ============================================================

# Server
PORT=3000
NODE_ENV=development
LOG_LEVEL=debug

# Database (required)
DATABASE_URL=postgresql://user:password@localhost:5432/property_legal_agent

# CORS — comma-separated origins
CORS_ORIGINS=http://localhost:3000

# Firebase Admin SDK
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# BigQuery Analytics (optional)
BIGQUERY_PROJECT_ID=
BIGQUERY_DATASET=property_legal_agent

# Cache
CITY_CACHE_TTL_MS=3600000

# Dev Auth Bypass (set to "true" to enable dev auth headers)
DEV_AUTH_BYPASS=

# Redis (optional — enables distributed rate limiting across instances)
REDIS_URL=

# Azure Application Insights (optional — enables APM, distributed tracing)
APPLICATIONINSIGHTS_CONNECTION_STRING=
